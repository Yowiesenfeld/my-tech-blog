<div class="container-fluid">
    <div class="row justify-content-center mt-5">
        <main class="login-wrapper col-8 text-center bg-warning rounded">
            <h2>Login</h2>

            <div class="form-wrapper row justify-content-center">
                <form class="login-form col-4">
                    <div class="form-group col-12">
                        <input type="email" class="form-control" id="login-email-input" placeholder="Enter email">
                    </div>
                    <div class="form-group col-12">
                        <input type="password" class="form-control" id="login-password-input" placeholder="Password">
                    </div>

                    <button type="submit" class="btn-md btn-light p-1 rounded">Submit</button>
                </form>
            </div>

            <div class="form-wrapper mt-4 pb-4 row justify-content-center">
                <form class="signup-form col-4">
                    <div class="form-group col-12">
                        <input type="text" class="form-control" id="signup-username-input" placeholder="Enter username">
                    </div>
                    <div class="form-group col-12">
                        <input type="email" class="form-control" id="signup-email-input" placeholder="Enter email">
                    </div>
                    <div class="form-group col-12">
                        <input type="password" class="form-control" id="signup-password-input" placeholder="Password">
                    </div>

                    <button type="submit" class="btn-md btn-light p-1 rounded">Signup</button>
                </form>
            </div>
        </main>
    </div>
</div>
