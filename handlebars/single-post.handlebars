<main class="row justify-content-center mb-4">
    <div class="card mt-4 custom-box-shadow col-11 border-dark border-2">
        <a class="link-light text-decoration-none" href="/post/{{post.id}}">
            <div class="card-header bg-dark">
                <span class="h4 me-auto">{{post.title}}</span> <span>Posted by {{post.user.username}} on {{format_date post.created_at}}</span>
            </div>
        </a>

        <div class="card-body post-body">
            <p class="card-text">{{post.content}}</p>
        </div>

        <a class="link-light text-decoration-none comment-link" data-bs-toggle="collapse" href="#commentBody{{post.id}}" role="button" aria-expanded="false" aria-controls="commentBody">
            <div class="card-footer py-1 bg-secondary">
                <small class="fw-bold"><i class="fas fa-caret-square-down"></i> Comments</small>
            </div>
        </a>

        <div class="collapse" id="commentBody{{post.id}}">
            {{#if post.comments}}
            <div class="card-body comment-body p-0">
                {{> comment post.comments}}
            </div>
            {{/if}}

            {{#if loggedIn}}
            <div class="card-body comment-body row mx-0 bg-dark">
                <form class="row comment-form justify-content-center mx-0">
                    <div class="mt-3 col-10 mb-3">
                        <textarea class="form-control" placeholder="Leave a comment here" name="comment-body" id="commentText"></textarea>
                    </div>

                    <div class="mt-1 text-center">
                        <button type="submit" class="btn btn-warning btn-sm col-6 mb-3 rounded">Submit</button>
                    </div>
                </form>
            </div>
            {{/if}}
        </div>
    </div>
</main>

<script src="/javascript/comment.js"></script>
