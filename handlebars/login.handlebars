<main class="row justify-content-center">
    <div class="card mt-4 custom-box-shadow col-sm-12 col-md-10 px-0">
        <div class="card-header text-center bg-dark text-warning py-3">
            <span class="h4">Login / Signup</span>
        </div>

        <div class="card-body bg-secondary pb-4">
            <div class="form-wrapper col-12 mt-2 row justify-content-center">
                <form class="login-form col-10">
                    <div class="form-group col-12">
                        <input type="email" class="form-control text-center" id="login-email-input" placeholder="Enter email">
                    </div>
                    <div class="form-group col-12 mt-3">
                        <input type="password" class="form-control text-center" id="login-password-input" placeholder="Password">
                    </div>

                    <div class="mt-3 text-center">
                        <button type="submit" class="btn col-5 btn-warning rounded">Login</button>
                    </div>
                </form>
            </div>

            <div class="form-wrapper col-12 mt-4 row justify-content-center">
                <form class="signup-form col-10">
                    <div class="form-group col-12">
                        <input type="text" class="form-control text-center" id="signup-username-input" placeholder="Enter username">
                    </div>
                    <div class="form-group col-12 mt-3">
                        <input type="email" class="form-control text-center" id="signup-email-input" placeholder="Enter email">
                    </div>
                    <div class="form-group col-12 mt-3">
                        <input type="password" class="form-control text-center" id="signup-password-input" placeholder="Password">
                    </div>
                    <div class="mt-3 text-center pb-1">
                        <button type="submit" class="btn col-5 btn-warning rounded">Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<script src="/javascript/login.js"></script>
